<section class='container'> 
    <div class="card d-flex">
        <div class="card-image">
            <%= image_tag("#{@user.photo}", width:'100%', height:'100%') %>
        </div>
        <div class="card-body">
            <h1 class="card-title"> <%= @user['name'] %> </h1>

            <p class="card-text">Number of posts: <%= @user['posts_counter'] %> </p>
        </div>
    </div>

    <% @posts.each do |post| %>
       
              <div class='post-comment-wrapper'>
                <div class='post-wrapper'>
                    <div class='post-div'>
                            <h4> <%= post['title'] %> </h4>
                            <p>
                                <%= post['text'] %>...
                            </p>
                            
                            <p class='comments-likes'>
                                <small>Comments:x, Likes:y </small>
                            </p>
                            <%= link_to(user_post_path(@user['id'], post['id'])) do %>
                                 <button> VIEW POST</button>
                            <% end %>
                    </div>
                </div>
                <div class='comment-wrapper'>
                    <% post.recent_comments.each do |comment| %>
                        <p><strong>Username </strong> :  <%=  comment['text'] %> </p>
                    <% end %>
                </div>
            </div>
    <% end %>

   

    <div> <button class='pagination'> Pagination</button> </div>
</section>
