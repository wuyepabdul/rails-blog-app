<section class='container'> 
    <div class="card d-flex">
        <div class="card-image">
            <%= image_tag("#{@user.photo}", width:'100%', height:'100%') %>
        </div>
        <div class="card-body">
            <h1 class="card-title"> <%= @user['name'] %> </h1>

            <p class="card-text">Number of posts: <%= @user['number_of_posts'] %> </p>
        </div>
    </div>

    <% @posts.each do |post| %>
        <%= link_to(user_post_path(@user['id'], post['id'])) do %>
            <div class='post-comment-wrapper'>
                <div class='post-wrapper'>
                    <div class='post-div'>
                            <h4>Post #1 </h4>
                            <p>
                                Lorem ipsum dolor sit amet consectetur adipisicing elit. Aliquid iure possimus aut, soluta tenetur reiciendis placeat eos sunt totam consequuntur labore quas atque ipsa rem repellendus...
                            </p>
                            <p class='comments-likes'>
                                <small>Comments:x, Likes:y </small>
                            </p>
                    </div>
                </div>
                <div class='comment-wrapper'>
                    <% post.recent_comments.each do |comment| %>
                        <p><strong>Username </strong> :  <%=  comment['text'] %> </p>
                    <% end %>
                </div>
            </div>
        <% end %>
    <% end %>

   

    <div> <button class='pagination'> Pagination</button> </div>
</section>
