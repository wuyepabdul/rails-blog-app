<h1> New Post </h1>

<%= form_with model:@post, url: user_posts_path, scope: :data do |form| %>
    <div class='input-field' >
        <%= form.label :title %> <br>
        <%= form.text_field :title %>
    </div>
    <div class='input-field'>
        <%= form.label :text %> <br>
        <%= form.text_area :text %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>
